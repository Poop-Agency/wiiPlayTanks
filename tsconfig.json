{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./public/dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}